<div class="container-fluid matcha-around">

	<div class="well">
		<div class="row filters">
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Age range</span>
					<input id="age"
						type="text"
						data-slider-id="age-slider"
						data-provide="slider"
						value=""
						data-slider-min="18"
						data-slider-max="99"
						data-slider-step="1"
						data-slider-value="[18, 99]"
						data-slider-tooltip_position="bottom"
					/>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Distance from me</span>
					<input id="distance"
						type="text"
						data-slider-id="distance-slider"
						data-provide="slider"
						value=""
						data-slider-min="0"
						data-slider-max="600"
						data-slider-step="50"
						data-slider-value="[0, 600]"
						data-slider-tooltip_position="bottom"
					/>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Popularity score range</span>
					<input id="popularity"
						type="text"
						data-slider-id="pop-slider"
						data-provide="slider"
						value=""
						data-slider-min="0"
						data-slider-max="100"
						data-slider-step="5"
						data-slider-value="[0, 100]"
						data-slider-tooltip_position="bottom"
					/>
				</div>
			</div>
		</div>
		<div class="row filters">
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Sort by sex</span>
					<input
						id="sex"
						type="text"
						data-slider-id="sex-slider"
						data-provide="slider"
						data-slider-ticks="[1, 2, 3]"
						data-slider-ticks-labels='["Male", "Female", "Other"]'
						data-slider-min="1"
						data-slider-max="3"
						data-slider-step="1"
						data-slider-value="1"
						data-slider-tooltip="hide"
					>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Sort by orientation</span>
					<input
						id="orientation"
						type="text"
						data-slider-id="orientation-slider"
						data-provide="slider"
						data-slider-ticks="[1, 2, 3]"
						data-slider-ticks-labels='["Straight", "Bisexual", "Gay"]'
						data-slider-min="1"
						data-slider-max="3"
						data-slider-step="1"
						data-slider-value="2"
						data-slider-tooltip="hide"
					>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="form-group blk-filters">
					<span class="label-filters">Sort by</span>
					<input
						id="sort"
						type="text"
						data-slider-id="sort-slider"
						data-provide="slider"
						data-slider-ticks="[1, 2, 3]"
						data-slider-ticks-labels='["Age", "Distance", "Popularity"]'
						data-slider-min="1"
						data-slider-max="3"
						data-slider-step="1"
						data-slider-value="2"
						data-slider-tooltip="hide"
					>
				</div>
			</div>
		</div>
		<div class="row filters">
			<div class="col-md-12">
				<center>
					<span class="label-filters">All interests tags</span>
					{{#each interests}}
						<button type="button" class="btn btn-xs btn-warning btn-filters"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> <span class="span-interest">{{this}}</span></button>
					{{/each}}
				</center>
			</div>
		</div>
	</div>

	<div class="row profiles-around sortbyage hidden">
		{{#each byAge}}

		<div class="col-md-3 col-xs-12 div-profil hidden">
			<div class="thumbnail profil"
				data-age="{{age}}"
				data-sex="{{infos.sex}}"
				data-orientation="{{infos.orientation}}"
				data-popularity="{{popularity}}"
				data-distance="{{distance}}"
				data-interests="{{#each interests}}{{this}},{{/each}}">
				<a href="/user/{{_id}}"><div class="img" style="background-image : url('{{photo}}');"></div></a>
				<div class="caption">
					<h5><span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{infos.firstname}} {{infos.lastname}}</h5>
					<p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> {{location.city}}, {{location.country}}</p>
					<p><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> About <strong>{{distance}}</strong> km</p>
					{{#each interests}}
						<button type="button" class="btn btn-warning btn-xs btn-tag"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> <span class="span-interest">{{this}}</span></button>
					{{/each}}
				</div>
			</div>
		</div>

		{{/each}}
	</div>

	<div class="row profiles-around sortbydistance">
		{{#each byDistance}}

		<div class="col-md-3 col-xs-12 div-profil hidden">
			<div class="thumbnail profil"
				data-age="{{age}}"
				data-sex="{{infos.sex}}"
				data-orientation="{{infos.orientation}}"
				data-popularity="{{popularity}}"
				data-distance="{{distance}}"
				data-interests="{{#each interests}}{{this}},{{/each}}">
				<a href="/user/{{_id}}"><div class="img" style="background-image : url('{{photo}}');"></div></a>
				<div class="caption">
					<h5><span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{infos.firstname}} {{infos.lastname}}</h5>
					<p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> {{location.city}}, {{location.country}}</p>
					<p><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> About <strong>{{distance}}</strong> km</p>
					{{#each interests}}
						<button type="button" class="btn btn-warning btn-xs btn-tag"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> <span class="span-interest">{{this}}</span></button>
					{{/each}}
				</div>
			</div>
		</div>

		{{/each}}
	</div>

	<div class="row profiles-around sortbypopularity hidden">
		{{#each byPopularity}}

		<div class="col-md-3 col-xs-12 div-profil hidden">
			<div class="thumbnail profil"
				data-age="{{age}}"
				data-sex="{{infos.sex}}"
				data-orientation="{{infos.orientation}}"
				data-popularity="{{popularity}}"
				data-distance="{{distance}}"
				data-interests="{{#each interests}}{{this}},{{/each}}">
				<a href="/user/{{_id}}"><div class="img" style="background-image : url('{{photo}}');"></div></a>
				<div class="caption">
					<h5><span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{infos.firstname}} {{infos.lastname}}</h5>
					<p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> {{location.city}}, {{location.country}}</p>
					<p><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> About <strong>{{distance}}</strong> km</p>
					{{#each interests}}
						<button type="button" class="btn btn-warning btn-xs btn-tag"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> <span class="span-interest">{{this}}</span></button>
					{{/each}}
				</div>
			</div>
		</div>

		{{/each}}
	</div>
</div>

<script type="text/javascript" src="/js/search.js"></script>
